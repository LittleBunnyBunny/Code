class Solution {
public:
    void merge(vector<int>& nums1, int m, vector<int>& nums2, int n) {
        std::vector<int> ans(m+n);
        int i = 0, j = 0, index = 0;
        while(i < m && j < n) {
            ans[index++] = (nums1[i] < nums2[j]) ? nums1[i++] : nums2[j++];
        }
        while (i < m) 
        { 
            ans[index++] = nums1[i++]; 
        } 

        while (j < n) {
            ans[index++] = nums2[j++]; 
        } 
        nums1 = ans;
    }
};
